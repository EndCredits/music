{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    }

  },
  "include": ["./**/*.ts","../shared/**/*.ts"]
}
